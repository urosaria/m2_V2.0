<!DOCTYPE HTML>
<html>
<head>
    <title>M2 관리자</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <script type="text/javascript" src="/js/admin/common/include.js"></script>
</head>
<body>

{{> admin/common/nav}}

<div class="card mt-5">
    <div class="card-body">
        {{#pictureForm}}
        <form name="boardForm" method="post" action="/admin/picture/register">
            <input type="text" name="id" value="{{id}}" />

            <div class="form-group">
                <label for="name">조감도명 </label>
                <input class="form-control" id="title" name="name" type="text" value="{{name}}">
            </div>
            <div class="form-group">
                <label for="name">설명 </label>
                <textarea class="form-control" name="etc" rows="3">{{etc}}</textarea>
            </div>
            <div style="text-align: center">
                <input type="submit" value="수정" class="btn btn-primary" />
                <a class="btn btn-secondary" href="/admin/picture/list" role="button">목록</a>
            </div>
        </form>
        {{/pictureForm}}
    </div>
</div>

{{> admin/common/footer }}

</body>
</html>
