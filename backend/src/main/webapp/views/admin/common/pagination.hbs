<nav aria-label="Page navigation example">
    {{#pagination this currentPageNumber totalPageCount pageGroupCount }}
        <ul class="pagination justify-content-end" style="height:85px">
            {{#if canGoPrevious}}
                <li class="page-item">
                    <a class="page-link" href="?page={{previousIdx}}" tabindex="-1">Previous</a>
                </li>
            {{/if}}
            {{#each pages}}
                <li class="page-item {{#if isCurrent}}active{{/if}}"><a class="page-link" href="?page={{page}}&status={{status}}">{{page}}</a></li>
            {{/each}}
            {{#if canGoNext}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextIdx}}&status={{status}}">Next</a>
                </li>
            {{/if}}
        </ul>
    {{/pagination}}
</nav>
